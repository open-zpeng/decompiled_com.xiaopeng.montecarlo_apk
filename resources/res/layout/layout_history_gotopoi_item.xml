            <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_dest_item_address_name" android:layout_marginTop="@dimen/search_scene_address_mt" android:layout_toRightOf="@+id/tv_dest_item_address_type" android:layout_below="@+id/tv_dest_item_name" android:layout_marginEnd="@dimen/search_scene_item_content_me" android:layout_toStartOf="@+id/container_goto_poi_view" style="@style/search_sub_title_style"/>
