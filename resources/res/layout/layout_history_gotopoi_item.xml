            <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_dest_item_name" android:layout_marginTop="@dimen/search_scene_item_content_mt" android:layout_marginEnd="@dimen/search_scene_item_content_me" android:layout_toStartOf="@+id/container_goto_poi_view" android:layout_toEndOf="@+id/iv_location" style="@style/search_main_title_style"/>
