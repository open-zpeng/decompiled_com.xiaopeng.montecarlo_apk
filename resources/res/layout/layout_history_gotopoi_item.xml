            <com.xiaopeng.xui.view.XView android:id="@+id/bottom_line" style="@style/search_item_divider_style"/>
        </com.xiaopeng.xui.widget.XRelativeLayout>
        <com.xiaopeng.xui.widget.XTextView android:id="@+id/tv_dest_delete" app:vuiAction="@string/vui_action_click" app:vuiElementType="TEXTVIEW" style="@style/search_history_item_delete_style"/>
    </com.xiaopeng.montecarlo.views.SwipeMenuLayout>
    <com.xiaopeng.xui.widget.XImageView android:id="@+id/iv_left_shadow" android:visibility="gone" android:layout_width="78dp" android:layout_height="wrap_content" android:src="@drawable/shape_bg_indicator_right" android:alpha="0"/>
</RelativeLayout>
