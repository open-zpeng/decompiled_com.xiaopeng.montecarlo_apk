<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/loc_debug_switch_parent" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="100dp">
        <TextView android:textColor="@android:color/white" android:id="@+id/loc_debug_switch_text" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/debug_list_enable_location_statistics" android:layout_weight="1" style="@style/font_regular_land_40_port_36"/>
        <Switch android:layout_gravity="center" android:id="@+id/loc_debug_switch" android:padding="10dp" android:focusable="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    </LinearLayout>
    <RadioGroup android:orientation="horizontal" android:id="@+id/loc_debug_mode_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="28dp">
