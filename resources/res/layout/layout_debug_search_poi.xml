<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/xui_white" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
    <TextView android:textColor="@color/primary_black" android:gravity="center_vertical" android:id="@+id/function_name" android:layout_width="match_parent" android:layout_height="50dp" android:text="搜索POIID" style="@style/font_regular_land_30_port_28"/>
    <RadioGroup android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/radio_group" android:layout_width="match_parent" android:layout_height="50dp">
        <RadioButton android:id="@+id/poi_bl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="高德POI" android:shadowColor="@color/tag_text_light_green" android:layout_weight="1" style="@style/debug_radio_button_style"/>
        <RadioButton android:id="@+id/poi_charge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="充电站POI" android:shadowColor="@color/tag_text_white" android:layout_weight="1" style="@style/debug_radio_button_style"/>
    </RadioGroup>
    <EditText android:id="@+id/et_poi_id" android:layout_width="300dp" android:layout_height="wrap_content" style="@style/font_regular_land_30_port_28"/>
    <Button android:id="@+id/btn_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="搜索" style="@style/font_regular_land_30_port_28"/>
    <ScrollView android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <HorizontalScrollView android:orientation="horizontal" android:scrollbars="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/primary_black" android:gravity="center_vertical" android:id="@+id/tv_result" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/font_regular_land_30_port_28"/>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
