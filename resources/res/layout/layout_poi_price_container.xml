<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="72dp">
    <com.xiaopeng.xui.widget.XImageView android:id="@+id/poi_price_divider" style="@style/poi_pop_horizontal_divider"/>
    <RelativeLayout android:orientation="horizontal" android:paddingTop="19dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
