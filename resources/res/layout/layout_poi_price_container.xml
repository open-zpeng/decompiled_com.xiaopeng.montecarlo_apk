            <com.xiaopeng.montecarlo.views.poicard.CommonChargePrice android:id="@+id/container_common_charge_price" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <com.xiaopeng.montecarlo.views.poicard.XpChargePrice android:id="@+id/container_xp_charge_price" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</merge>
