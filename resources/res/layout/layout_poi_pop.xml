    <com.xiaopeng.xui.widget.XLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/main_body" android:background="@drawable/drawable_poi_card_view_bg_poi_card" android:padding="@dimen/poi_pop_bg_padding" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:adjustViewBounds="true" android:maxHeight="@dimen/poi_pop_height">
