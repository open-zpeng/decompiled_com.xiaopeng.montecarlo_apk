            </com.xiaopeng.xui.widget.XRelativeLayout>
            <com.xiaopeng.xui.widget.XLinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/poi_bottom" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </com.xiaopeng.xui.widget.XLinearLayout>
    </com.xiaopeng.xui.widget.XLinearLayout>
</com.xiaopeng.xui.widget.XRelativeLayout>
