<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/search_scene_load_more_corner_radius"/>
            <solid android:color="@color/search_load_more_selected_bg_color"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/search_scene_load_more_corner_radius"/>
            <solid android:color="@color/search_load_more_selected_bg_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/search_scene_load_more_corner_radius"/>
            <solid android:color="@color/search_load_more_normal_bg_color"/>
        </shape>
    </item>
</selector>
