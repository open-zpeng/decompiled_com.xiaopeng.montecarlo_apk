<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:top="20dp" android:bottom="20dp">
                <shape android:shape="rectangle">
                    <size android:height="50dp" android:width="100dp"/>
                    <corners android:radius="27dp"/>
                    <solid android:color="@color/search_result_filter_bg_selected"/>
                    <stroke android:width="2dp" android:color="@color/search_result_filter_bg_selected_stroke"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:top="20dp" android:bottom="20dp">
                <shape android:shape="rectangle">
                    <corners android:radius="27dp"/>
                    <solid android:color="@color/search_result_filter_bg_unselected"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
