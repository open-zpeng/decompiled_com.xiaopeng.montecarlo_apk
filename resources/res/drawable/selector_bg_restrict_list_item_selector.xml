<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/restricted_list_item_bg_start_color" android:endColor="@color/restricted_list_item_bg_end_color" android:angle="45"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/restricted_list_item_bg_start_color" android:endColor="@color/restricted_list_item_bg_end_color" android:angle="45"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/restricted_list_item_bg_start_color" android:endColor="@color/restricted_list_item_bg_end_color" android:angle="45"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/restricted_list_item_bg_start_color" android:endColor="@color/restricted_list_item_bg_end_color" android:angle="45"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:height="107dp" android:width="144dp"/>
                    <solid android:color="@color/primary_translation"/>
                </shape>
            </item>
            <item android:top="107dp">
                <shape android:shape="rectangle">
                    <size android:height="1dp" android:width="144dp"/>
                    <solid android:color="@color/restricted_rule_line_bg_color"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
