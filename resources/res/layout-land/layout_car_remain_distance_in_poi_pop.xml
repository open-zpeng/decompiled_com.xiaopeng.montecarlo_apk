<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:montecarlo="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="77dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.xiaopeng.montecarlo.views.NaviImageView android:id="@+id/mile_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/vector_ic_small_naiv_gray"/>
        <com.xiaopeng.xui.widget.XLoading android:layout_gravity="center" android:id="@+id/progressBar_navi_distance" android:layout_marginLeft="9dp" android:layout_marginRight="6dp" style="@style/XLoading.Small"/>
        <com.xiaopeng.xui.widget.XTextView android:textColor="@color/poi_card_text_color_02" android:id="@+id/navi_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" style="@style/poi_pop_navi_distance_style"/>
        <com.xiaopeng.montecarlo.views.BatteryView android:id="@+id/battery_icon" android:visibility="gone" android:layout_width="@dimen/charge_battery_width" android:layout_height="@dimen/charge_battery_height" android:layout_marginLeft="20dp" android:layout_marginTop="@dimen/poi_card_battery_icon_top_offset" montecarlo:batteryNormalBackground="@drawable/vector_ic_small_ele_normal" montecarlo:batteryNormalProgressDrawable="@drawable/layer_battery_progress_normal" montecarlo:batteryProgressMarginBottom="5dp" montecarlo:batteryProgressMarginLeft="5dp" montecarlo:batteryProgressMarginRight="11dp" montecarlo:batteryProgressMarginTop="5dp" montecarlo:batteryRedWarningBackground="@drawable/vector_ic_small_ele_little" montecarlo:batteryWarningBackground="@drawable/vector_ic_small_ele_shortage" style="@style/battery_style"/>
        <com.xiaopeng.xui.widget.XTextView android:textColor="@color/poi_card_text_color_02" android:id="@+id/loading_battery_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" style="@style/poi_pop_loading_battery_status_style"/>
        <com.xiaopeng.xui.widget.XLoading android:layout_gravity="center" android:id="@+id/progressBar_battery_status" android:visibility="gone" android:layout_marginLeft="6dp" style="@style/XLoading.Small"/>
        <com.xiaopeng.xui.widget.XTextView android:id="@+id/battery_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" style="@style/poi_pop_battery_status_style"/>
        <com.xiaopeng.xui.widget.XTextView android:textSize="@dimen/font_size_26" android:id="@+id/battery_charge_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" style="@style/font_xp_medium"/>
    </LinearLayout>
</LinearLayout>
